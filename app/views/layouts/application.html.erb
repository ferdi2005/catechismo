<!DOCTYPE html>
<html>
  <head>
    <title>Catechismo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
    <script src="https://kit.fontawesome.com/8e330155be.js"></script>
  </head>

  <body>
      <% flash.each do |key, value| %>
          <script>
            Swal.fire({
              type: '<%== key %>',
              text: '<%== value %>'    
            })
          </script>
      <% end%>
<section class="section">
    <nav class="level">
      <div class="level-left">
        <h1 class="title is-5">Anno di riferimento</h1>
        &nbsp;
        <div class="select">
          <%= select_tag('year', options_from_collection_for_select(Year.all, "id", "anno")) %>
        </div>
        &nbsp;
        &nbsp;
        <%= link_to 'Torna alla home', root_path, class: 'button is-danger is-small' %>
        &nbsp;
        <% unless @day.nil? %>
          <%= link_to 'Chiudi giornata', days_close_path, class: 'button is-warning is-small', data: {turbolinks: false, confirm: "Chiudendo la giornata dovrai consegnare â‚¬#{@day.subscriptions.pluck(:quota).sum}. Giusto?"} %>
        <% end %>
      </div>

      <script>
        $('#year').change(function(){
          var year_id = $('#year').val();
          console.log('Anno corrente -> ' + year_id);
          Cookies.set('year_id', year_id);
        });

        $(document).ready(function(){
          var year_id = $('#year').val();
          console.log('Anno corrente -> ' + year_id);
          Cookies.set('year_id', year_id);

        })
      </script>
    </nav>
      <%= yield %>

  </section>
  </body>
</html>
