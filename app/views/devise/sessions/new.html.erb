<h2 class="title">Accedi</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :username, class: 'label' %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'input'%>
  </div>

  <div class="field">
    <%= f.label :password, class: 'label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
  </div>

  <div class="actions">
    <%= f.submit "Accedi", class: 'button is-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
