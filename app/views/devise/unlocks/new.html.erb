<h2>Invia le istruzioni per lo sblocco</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.email_field :username, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Invia le istruzioni per lo sblocco" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
